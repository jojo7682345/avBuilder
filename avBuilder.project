#!/usr/bin/avBuilder
import "library/c/stdc.project" {
    build;
    getSourceFiles;
}

compiler = "gcc";
linker = "gcc";

flags=[
    "-ggdb"
];
includes=[
    "./include"
];
libs=[
    "m"
];
srcDir = [
    "src"
];

avBuilder() {
    perform {
        executable = build(getSourceFiles(srcDir), "build", flags, [], includes, [], libs, PROJECT_NAME, ".");
    }
}


