#!/usr/bin/avBuilder
import "library/c/stdc.project" {
    buildExecutable as build;
    getSourceFiles;
}

compiler = "gcc";
linker = "gcc";

flags=[
    "-ggdb"
];
includes=[
    "./include",
    "lib/AvUtils/include"
];

libDirs=[
    //"lib/AvUtils/lib"
];
libs=[
    "m",
    //"avUtils"
];
srcDir = [
    "src"
];

avBuilder() {
    perform {
        executable = build(getSourceFiles(srcDir), "build", flags, [], includes, libDirs, libs, PROJECT_NAME, ".");
    }
}


